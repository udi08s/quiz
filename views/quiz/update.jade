extends ../layout
block content
  section.content-header
    .container-fluid 
      .row.mb-2
        .col-sm-6
          h1 Quiz
        .col-sm-6
          ol.breadcrumb.float-sm-right
            li.breadcrumb-item
              a(href='#') Home
            li.breadcrumb-item.active Quiz

  section.content
    .container-fluid
      .row
        .col-md-12
          .card.card-primary
            .card-header
              h3.card-title Update quiz
            form(action='/quiz/update/#{quiz._id}' method='post')
              .card-body
                .row 
                  .col-md-12
                    .form-group
                      label(for='title') Title
                      input#title.form-control(type='text' name='title' value='#{quiz.title}' placeholder='Title')
                  .col-md-12
                    .form-group
                      label(for='description') Description
                      textarea#description.form-control(name='description' placeholder='Description') #{quiz.description}
                  .col-md-6
                    .form-group
                      label(for='type') Type
                      select#type.form-control( name='type')
                        option(value='') Select type
                        option(value='Multiplechoice' selected=quiz.type=='Multiplechoice'?'selected':'') Multiplechoice
                        option(value='FillGap' selected=quiz.type=='FillGap'?'selected':'') Fill Gap
                  .col-md-6
                    .form-group
                      label(for='category') Category
                      select#type.form-control( name='category')
                        option(value='') Select category
                        option(value='Education' selected=quiz.category=='Education'?'selected':'') Education
                        option(value='Gaming' selected=quiz.category=='Gaming'?'selected':'') Gaming
                  .col-md-6
                    .form-group
                      label(for='difficulty') Difficulity level
                      select#type.form-control( name='difficulty')
                        option(value='') Select level
                        option(value='easy' selected=quiz.difficulty=='easy'?'selected':'') Easy
                        option(value='medium' selected=quiz.difficulty=='medium'?'selected':'') Medium
                        option(value='hard' selected=quiz.difficulty=='hard'?'selected':'') Hard
                  .col-md-6
                  .col-md-12
                    .card-footer
                      button.btn.btn-primary(type='submit') Submit 
                      &nbsp;&nbsp;
                      a.btn.btn-secondary(href='/quiz/') Cancel

